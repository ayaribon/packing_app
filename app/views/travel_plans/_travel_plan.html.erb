<div class="p-4 md:w-1/3">
  <div class="flex rounded-lg h-full bg-gray-100 p-8 flex-col">
    <a class="inline-flex sm:ml-auto sm:mt-0 justify-center sm:justify-start">
      <h4>出発日：</h4>
      <%= travel_plan.due %>
    </a>
    <div class="flex items-center mb-3">
      <div class="w-12 h-12 inline-flex items-center justify-center rounded-full bg-indigo-100 text-indigo-500 mb-5">
        <%= image_tag 'airplane.png'%>
      </div>
      <span class="text-gray-900 text-lg title-font font-medium px-8">
        <%= link_to travel_plan.title, travel_plan_tasks_path(travel_plan) %>
      </span>
    </div>
    <div class="flex-grow">
      <p class="leading-relaxed text-base">
        <%= travel_plan.note %>
      </p>
      <div class="mt-3 text-indigo-500 flex justify-between">
        <%= link_to t('travel_plans.index.create_task'), new_travel_plan_task_path(travel_plan) %>
        <div class="flex ml-auto space-x-4">
          <%= link_to t('helpers.submit.edit'), edit_travel_plan_path(travel_plan) %>
          <%= link_to t('helpers.submit.delete'), travel_plan_path(travel_plan), data: { turbo_method: :delete } %>
        </div>
      </div>
    </div>
  </div>
</div>

