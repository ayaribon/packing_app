<tbody>
  <% @tasks.each do |task| %>
    <%= form_with model: [@travel_plan, task], local: true do |f| %>
      <tr>
        <td class="px-4 py-3"><%= task.title %></td>
        <td class="px-4 py-3"><%= f.select :baggage, Task.baggage.options, {}, class: "leading-7 text-sm text-gray-600" %></td>
        <td class="px-4 py-3"><%= task.due %></td>
        <td class="px-4 py-3"><%= link_to "編集", edit_travel_plan_task_path(@travel_plan, task) %></td>
        <td class="px-4 py-3"><%= link_to "削除", travel_plan_task_path(@travel_plan, task), data: { turbo_method: :delete } %></td>
        <td class="px-4 py-3"><%= f.select :status, Task.status.options, {}, class: "leading-7 text-sm text-gray-600" %></td>
      </tr>
    <% end %>
  <% end %>
</tbody>